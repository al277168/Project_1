@page
@model Project_1_Restaurant.Pages.CartList.CartModel

<!--This is based on "Learn ASP.NET Core 3.1 - Full Course for Beginners [Tutorial] from freeCodeCamp.org-->

<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-dark">Cart</h2>
    </div>
    <div class="col-2">
        <a href="http://localhost:63008" class="btn btn-outline-info">Add to Cart</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Items.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Items.FirstOrDefault().Name"></label>
                        </th>
                        <th>

                            <label asp-for="Items.FirstOrDefault().price"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().NumOfOrders"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.NumOfOrders)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p> There is nothing in Cart</p>
            }
        </form>
    </div>
</div>